{
	"$schema": "https://turbo.build/schema.json",
	"extends": ["//"],
	"tasks": {
		"bundle": {
			"dependsOn": ["^build", "@roo-code/vscode-webview#build"],
			"outputs": ["dist/**"]
		},
		"bundle:onprem": {
			"dependsOn": ["^build", "@roo-code/vscode-webview#build"],
			"outputs": ["dist/**"],
			"env": ["ON_PREM=true", "NODE_ENV=production"]
		},
		"vsix": {
			"dependsOn": ["bundle"],
			"inputs": ["dist/**"],
			"outputs": ["../bin/**"]
		},
		"vsix:onprem": {
			"dependsOn": ["bundle:onprem"],
			"inputs": ["dist/**", "package.onprem.json"],
			"outputs": ["../bin/**"]
		},
		"watch:bundle": {
			"dependsOn": ["@roo-code/build#build", "@roo-code/types#build"],
			"cache": false
		}
	}
}
