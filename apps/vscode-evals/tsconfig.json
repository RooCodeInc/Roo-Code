{
	"compilerOptions": {
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"target": "ES2022",
		"lib": ["ES2022", "ESNext.Disposable", "DOM"],
		"sourceMap": true,
		"strict": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": false,
		"outDir": "out",
		"composite": false,
		"types": ["node"],
		"baseUrl": "./src"
	},
	"include": ["src/**/*"],
	"exclude": [".vscode-test", "**/node_modules/**", "out"]
}
