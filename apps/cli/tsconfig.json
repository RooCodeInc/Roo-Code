{
	"extends": "@roo-code/config-typescript/base.json",
	"compilerOptions": {
		"types": ["vitest/globals"],
		"outDir": "dist",
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"ignoreDeprecations": "6.0",
		"paths": {
			// "@/*": ["src/*"]
			"*": ["./*"]
		}
		// Ensure 'baseUrl' is not set here; if present in '@roo-code/config-typescript/base.json', remove or migrate it there.
	},
	"include": ["src", "*.config.ts"],
	"exclude": ["node_modules"]
}
