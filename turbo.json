{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"lint": {},
		"check-types": {},
		"test": {
			"dependsOn": ["@roo-code/types#build"]
		},
		"format": {},
		"clean": {
			"cache": false
		},
		"build": {
			"outputs": ["dist/**", "build/**"],
			"inputs": [
				"src/**",
				"docs/**",
				"package.json",
				"tsconfig.json",
				"tsup.config.ts",
				"vite.config.ts",
				"docusaurus.config.ts"
			]
		},
		"watch:tsc": {
			"cache": false
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"start": {
			"cache": false,
			"persistent": true
		},
		"typecheck": {
			"dependsOn": ["@roo-code/types#build"]
		}
	}
}
