{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"lint": {},
		"check-types": {
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"format": {},
		"clean": {
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "build/**", ".docusaurus/**"],
			"inputs": [
				"src/**",
				"docs/**",
				"static/**",
				"package.json",
				"tsconfig.json",
				"tsup.config.ts",
				"vite.config.ts",
				"docusaurus.config.ts",
				"sidebars.ts"
			]
		},
		"watch:tsc": {
			"cache": false
		}
	}
}
