{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"composite": true,
		"rootDir": ".",
		"baseUrl": "."
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "**/*.test.ts", "dist"]
}
